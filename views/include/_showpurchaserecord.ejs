<% for(var i=0;i < users.length;i++){ %>

    <tr>
        <td><%= i+1 %></td>
        <td><%= users[i].date %></td>
        <td><%= users[i].productid %></td>
        <td><%= users[i].productname %></td>
        <td><%= users[i].vendorname %></td>
        <td><%= users[i].vendoraddress %></td>
        <td><%= users[i].quantity %></td>
        <td><%= users[i].rate %></td>
        <td class="action">
            <a href="/update_purchase?id=<%= users[i]._id %>" class="btn border-shadow update">
                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
            </a>
            <a class="btn border-shadow delete" data-id=<%= users[i]._id %>>
                <span class="text-gradient"><i class="fas fa-times"></i></span>
            </a>
        </td>
    </tr>
    <% } %>