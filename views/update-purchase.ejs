<!-- Main -->

<main class="main">
    <div class="box-container">
        <div class="box-nav">
            <div class="filter">
                <a class="product-brand" href="/purchaserecord" ><i class="fas fa-angle-double-left"></i>Purchase record</a>
            </div>
        </div>
        <div class="form-div">
        <div class="form-title">
            <h3 class="form-title text">Update Product Purchase</h3>
        </div>

<!-- Form handle -->

<form  id="update_purchase" method="post">

    <div class="new_product">
        <div class="form-group">
            <input type="hidden" name="id" value="<%= user._id %>">
            <label for="productid" class="text-light">Id</label>
            <input type="text" value="<%= user.productid %>" name="productid" placeholder="001">
        </div>
        <div class="form-group">
            <label for="date" class="text-light">Date</label>
            <input type="text" value="<%= user.date %>" name="date" placeholder="Candy">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Productname</label>
            <input type="text" value="<%= user.productname %>" name="productname" placeholder="Candy">
        </div>
        <div class="form-group">
            <label for="vname" class="text-light">Vendor name</label>
            <input type="text" value="<%= user.vendorname %>" name="vendorname" placeholder="Agency">
        </div>
        <div class="form-group">
            <label for="vaddr" class="text-light">Vendor address</label>
            <input type="text" value="<%= user.vendoraddress %>" name="vendoraddress" placeholder="Chennai">
        </div>
        <div class="form-group">
            <label for="pqty" class="text-light">Quantity</label>
            <input type="text" value="<%= user.quantity %>" name="quantity" placeholder="2">
        </div>
        <div class="form-group">
            <label for="prate" class="text-light">Rate <i class="fas fa-rupee-sign"></i></label>
            <input type="text" value="<%= user.rate %>" name="rate" placeholder="100">
        </div>
        <div class="from-group">
            <button type="submit" class="btn text-dark update">Submit</button>
        </div>
    </div>
    </form>

<!-- /Form handle -->
